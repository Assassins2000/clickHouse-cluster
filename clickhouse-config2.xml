<yandex>
    <max_connections>1000</max_connections>
    <logger>
        <level>trace</level>
        <log>/var/log/clickhouse-server/clickhouse-server.log</log>
        <errorlog>/var/log/clickhouse-server/clickhouse-server.err.log</errorlog>
        <size>10M</size>
        <count>10</count>
    </logger>
    <remote_servers>
        <test1_cluster_two_shards_localhost>
            <shard>
                <replica>
                    <host>clickhouse1</host>
                    <port>9000</port>
                </replica>
                <replica>
                    <host>clickhouse2</host>
                    <port>9000</port>
                </replica>
            </shard>
        </test1_cluster_two_shards_localhost>
    </remote_servers>
    <zookeeper>
        <node>
            <host>zookeeper</host>
            <port>2181</port>
        </node>
        <session_timeout_ms>30000</session_timeout_ms>
        <operation_timeout_ms>10000</operation_timeout_ms>
    </zookeeper>
    <macros>
        <kafka_broker_list>kafka:9092</kafka_broker_list>
        <installation>clickhouse-cluster</installation>
        <all-sharded-shard>0</all-sharded-shard>
        <cluster>test1_cluster_two_shards_localhost</cluster>
        <shard>1</shard>
        <replica>replica2</replica>
    </macros>
</yandex>
